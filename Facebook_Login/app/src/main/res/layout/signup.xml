<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="55dp"
        android:layout_height="82dp"
        android:layout_marginStart="116dp"
        android:src="@drawable/calendar"
        app:layout_constraintBottom_toBottomOf="@+id/tv_signup"
        app:layout_constraintEnd_toStartOf="@+id/tv_signup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_signup" />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="24dp"
        android:text="Sign up"
        android:textColor="@color/purple_700"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_id"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:text="아이디"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/et_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_id" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="57dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_id"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_check1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/purple_700"
        android:text="중복확인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="비밀번호"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_pw"
        app:layout_constraintEnd_toEndOf="@+id/tv_id"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />

    <TextView
        android:id="@+id/tv_pw_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="비밀번호 확인"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_pw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pw" />

    <EditText
        android:id="@+id/et_pw_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="PW 확인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_pw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_pw" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="20dp"
        android:text="닉네임"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_nick"
        app:layout_constraintEnd_toEndOf="@+id/tv_pw_check"
        app:layout_constraintEnd_toStartOf="@+id/et_pw_check"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_nick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_pw_check"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_pw_check"
        app:layout_constraintTop_toBottomOf="@+id/et_pw_check" />

    <Button
        android:id="@+id/btn_check2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/purple_700"
        android:text="중복확인"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_nick"
        app:layout_constraintTop_toBottomOf="@+id/et_nick" />

    <Button
        android:id="@+id/btn_signup_ok"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:background="@color/purple_700"
        android:text="회원가입완료"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_check2" />

</androidx.constraintlayout.widget.ConstraintLayout>